@{
    ViewData["Title"] = "Home Page";
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

        <h1 class="govuk-heading-xl">
            Mother's Day service
        </h1>

        <p class="govuk-body">
            Use this service to receive a Mother's Day greeting if:
        </p>

        <ul class="govuk-list govuk-list--bullet">
            <li>you have a child</li>
            <li>who left it too late to post you a Mother's Day card</li>
        </ul>

        <p class="govuk-body">
            This service should take less than 5 minutes to use.
        </p>

        <a href="@Url.Action("DoYouHaveAChildQuestionGet", "Home")" role="button" draggable="false" class="govuk-button govuk-!-margin-top-2 govuk-!-margin-bottom-8 govuk-button--start" data-module="govuk-button">
            Start now
            <svg class="govuk-button__start-icon" xmlns="http://www.w3.org/2000/svg" width="17.5" height="19" viewBox="0 0 33 40" aria-hidden="true" focusable="false">
                <path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z" />
            </svg>
        </a>
        
        <p class="govuk-body-l"
           style="width: 100%;
                  background-color: lightpink;
                  border: 10px solid purple;
                  margin-top: 40px;
                  margin-bottom: 80px;
                  padding: 20px;
                  transform: rotate(-15deg)
                  ">
            <b>Please note:</b>
            <br/>
            This is not an real government service.
        </p>


    </div>
</div>

