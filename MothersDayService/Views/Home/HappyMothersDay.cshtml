@model HappyMothersDayViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

        <div class="govuk-panel govuk-panel--confirmation">
            <h1 class="govuk-panel__title">
                Happy Mother's Day
                <br/>
                @(Model.YourFirstName)
            </h1>
        </div>
        
        @if (Model.BestMum)
        {
            <p class="govuk-body">
                You're the best mum in the world!
            </p>
        }

        @if (Model.RelaxingDay)
        {
            <p class="govuk-body">
                Hope you have a lovely, relaxing day
            </p>
        }

        <p class="govuk-body">
            Lots of love,
            <br/>
            @(Model.ChildFirstName)
        </p>

    </div>
</div>

